<script>
     function rechercherPartenaires() {
        var critere = document.getElementById("critere").value;
        var ageMin = document.getElementById("age_min").value;
        var ageMax = document.getElementById("age_max").value;
        var sexe = document.getElementById("sexe").value;

        // Filtrer les partenaires selon les critères
        var partenairesTrouves = fakeProfiles.filter(function(partenaire) {
            return partenaire.age >= ageMin && partenaire.age <= ageMax && partenaire.genre.toLowerCase() === sexe.toLowerCase() && (partenaire.name.toLowerCase().includes(critere.toLowerCase()) || partenaire.bio.toLowerCase().includes(critere.toLowerCase()));
        });

        // Afficher les résultats
        var resultatHTML = "<h3>Résultats de la recherche :</h3>";
        if (partenairesTrouves.length > 0) {
            partenairesTrouves.forEach(function(partenaire) {
                resultatHTML += "<div class='profil'>";
                resultatHTML += "<img src='" + partenaire.photo + "' alt='Photo de " + partenaire.name + "' class='photo_profil' width='150' height='150'>";
                resultatHTML += "<h4>" + partenaire.name + "</h4>";
                resultatHTML += "<p>" + partenaire.bio + "</p>";
                resultatHTML += "<a href='#' onclick='ouvrirMessagerie(\"" + partenaire.name + "\")'>Envoyer un message</a>";
                resultatHTML += "</div>";
            });
        } else {
            resultatHTML += "<p>Aucun partenaire trouvé pour les critères donnés.</p>";
        }

        document.getElementById("resultats_recherche").innerHTML = resultatHTML;

        // Empêcher le formulaire de se soumettre normalement
        return false;
    }

    function ouvrirMessagerie(destinataire) {
        document.getElementById("destinataire").value = destinataire;
        openTab(event, 'interagir');
        // Afficher l'historique des messages avec le destinataire sélectionné
        afficherHistorique(destinataire);
    }
    function genererOptionsDestinataire() {
        var selectDestinataire = document.getElementById("destinataire");

        // Effacer les options existantes
        selectDestinataire.innerHTML = "";

        // Ajouter une option par profil aimé
        fakeProfiles.forEach(function(profile) {
            var option = document.createElement("option");
            option.value = profile.name;
            option.textContent = profile.name;
            selectDestinataire.appendChild(option);
        });
    }
    

    // Appeler la fonction pour générer les options lors du chargement de la page
    window.onload = genererOptionsDestinataire;
    window.onload = genererOptionsDestinataire;
    function effacerChampMessage() {
        document.getElementById("message").value = ""; // Efface le contenu du champ de message
    }
    function genererOptionsDestinataire() {
        var selectDestinataire = document.getElementById("destinataire");

        // Effacer les options existantes
        selectDestinataire.innerHTML = "";

        // Ajouter une option par profil aimé
        fakeProfiles.forEach(function(profile) {
            var option = document.createElement("option");
            option.value = profile.name;
            option.textContent = profile.name;
            option.onclick = function() {
                // Remplir automatiquement le champ destinataire avec le nom du profil sélectionné
                document.getElementById("destinataire").value = profile.name;
            };
            selectDestinataire.appendChild(option);
        });
    }

    var historiqueMessages = {}; // Utiliser un objet pour stocker l'historique des messages par destinataire

function envoyerMessage() {
    var destinataire = document.getElementById("destinataire").value;
    var message = document.getElementById("message").value;

    // Envoyer le message au destinataire sélectionné (logique d'envoi de message à implémenter)

    // Ajouter le message à l'historique des messages pour ce destinataire
    if (!historiqueMessages[destinataire]) {
        historiqueMessages[destinataire] = []; // Créer un tableau pour stocker les messages si ce destinataire n'a pas encore d'historique
    }
    historiqueMessages[destinataire].push(message); // Ajouter le message à l'historique

    // Afficher le message de confirmation
    document.getElementById("nouveau_message").style.display = "block";
    
    // Rafraîchir l'affichage de l'historique des messages
    afficherHistorique(destinataire);
}

function afficherHistorique(destinataire) {
    // Vérifier si l'historique des messages pour ce destinataire existe
    if (historiqueMessages[destinataire]) {
        var historiqueHTML = "<h3>Historique des messages avec " + destinataire + " :</h3>";
        historiqueHTML += "<ul>";
        historiqueMessages[destinataire].forEach(function(message) {
            historiqueHTML += "<li>" + message + "</li>";
        });
        historiqueHTML += "</ul>";

        // Afficher l'historique des messages dans l'élément HTML approprié
        document.getElementById("historique_messages").innerHTML = historiqueHTML;
    } else {
        // Effacer l'historique des messages s'il n'y a pas de messages pour ce destinataire
        document.getElementById("historique_messages").innerHTML = "";
    }
}
    function openTab(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
