function likeProfile() {
    // Récupérer le profil actuellement affiché
    var currentProfile = getCurrentProfile();

    // Ajouter le profil aimé à la liste des profils aimés
    addLikedProfile(currentProfile);
      displayProfile();
}
    
function passProfile() {
    displayProfile();
}

 

function displayProfile() {
    // Choisissez un profil aléatoire dans la liste des profils
    var randomIndex = Math.floor(Math.random() * fakeProfiles.length);
    var profile = fakeProfiles[randomIndex];

    // Mettez à jour le contenu du profil affiché
    document.getElementById("profile_name").textContent = profile.name;
    document.getElementById("profile_age_gender").textContent = profile.age + " ans, " + profile.genre;
    document.getElementById("profile_bio").textContent = profile.bio;
    document.getElementById("profile_image").src = profile.photo;

}

var likedProfiles = [];
function getCurrentProfile() {
    // Récupérer le profil actuellement affiché
    var profileImage = document.getElementById("profile_image");
    var profileName = document.getElementById("profile_name").textContent;
    var profileAgeGender = document.getElementById("profile_age_gender").textContent;
    var profileBio = document.getElementById("profile_bio").textContent;

    // Créer un objet profil avec les informations récupérées
    var profile = {
        name: profileName,
        age_gender: profileAgeGender,
        bio: profileBio,
        // Vous pouvez également inclure d'autres informations telles que l'âge, le genre, etc.
    };

    return profile;
}

function addLikedProfile(profile) {
    // Ajouter le profil aimé à la liste des profils aimés
    var likedProfilesList = document.getElementById("liked_profiles_list");
    var li = document.createElement("li");

    // Créer un lien pour discuter avec la personne aimée
    var link = document.createElement("a");
    link.textContent = profile.name;
    link.href = "#"; // Mettez "#" pour que le lien n'ait pas d'action par défaut

    // Ajouter un gestionnaire d'événement pour ouvrir la section d'interaction avec ce profil
    link.onclick = function() {
        // Remplir automatiquement le champ destinataire avec le nom du profil sélectionné
        document.getElementById("destinataire").value = profile.name;
        // Afficher la section d'interaction avec le profil
        openTab(event, 'interagir');
    };

    // Ajouter le lien à l'élément de liste
    li.appendChild(link);

    // Ajouter l'élément de liste à la liste des profils aimés
    likedProfilesList.appendChild(li);
}
function createProfile() {
        var nom = document.getElementById("nom").value;
        var prenom = document.getElementById("prenom").value;
        var email = document.getElementById("email").value;
        var motDePasse = document.getElementById("mot_de_passe").value;
        var dateDeNaissance = document.getElementById("date_de_naissance").value;
        var genre = document.getElementById("genre").value;
        var bio = document.getElementById("bio").value;
        var ville = document.getElementById("ville").value;

        // Construction du message de confirmation
        var confirmationMessage = "Votre profil a été créé avec succès !\n\n";
        confirmationMessage += "Nom : " + nom + "\n";
        confirmationMessage += "Prénom : " + prenom + "\n";
        confirmationMessage += "Email : " + email + "\n";
        confirmationMessage += "Date de naissance : " + dateDeNaissance + "\n";
        confirmationMessage += "Genre : " + genre + "\n";
        confirmationMessage += "Bio : " + bio + "\n";
        confirmationMessage += "Ville : " + ville;

        // Stockage du message dans localStorage
        localStorage.setItem("confirmationMessage", confirmationMessage);


        window.location.href = "#starlove";
        
        // Empêcher le formulaire de se soumettre normalement
        return false;
    }
   
    


